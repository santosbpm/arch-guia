loadkeys br-abnt2
locale-gen
export LANG=pt_BR.UTF-8
timedatectl set-ntp true
sudo reflector --verbose --latest 5 --sort rate --save /etc/pacman.d/mirrorlist
pacman -Syy

# create partition

mkfs.vfat /dev/sda1
mkfs.btrfs /dev/sda2

mount /dev/sda2 /mnt
btrfs subvolume create /mnt/@
btrfs subvolume create /mnt/@home
umount /mnt
mount -o noatiem,compress=zstd,space_cache, discard=async,subvol=@ /dev/sda2 /mnt
mkdir /mnt/{boot,home}
mount -o noatime,compress=zstd,space_cache,discard=async,subvol=@home /dev/sda2 /mnt/home
mount /dev/sda1 /mnt/boot

pacstrap /mnt base linux linux-firmware intel-ucode btrfs-progs vim
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt
